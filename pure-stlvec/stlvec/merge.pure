using stlvec;
using "lib:stlalgorithm";

namespace stl;

private extern int  sva_merge(expr*, expr*, expr*, expr* cmp);
private extern void sva_inplace_merge(expr*, expr* cmp);
private extern bool sva_includes(expr*, expr*, expr* cmp);
private extern int  sva_set_union(expr*, expr*, expr*, expr* cmp);
private extern int  sva_set_intersection(expr*, expr*, expr*, expr* cmp);
private extern int  sva_set_difference(expr*, expr*, expr*, expr* cmp);
private extern int  sva_set_symmetric_difference(expr*,expr*,expr*,expr* cmp);

merge rng1::svrng rng2::svrng rng3::mutable_svrng cmp =
  sva_merge rng1 rng2 rng3 cmp;

inplace_merge rng::mutable_svrng cmp = sva_inplace_merge rng cmp;

includes rng1::svrng rng2::svrng cmp = sva_includes rng1 rng2 cmp;

set_union rng1::svrng rng2::svrng rng3::mutable_svrng cmp =
  sva_set_union rng1 rng2 rng3 cmp;

set_intersection rng1::svrng rng2::svrng rng3::mutable_svrng cmp =
  sva_set_intersection rng1 rng2 rng3 cmp;

set_difference rng1::svrng rng2::svrng rng3::mutable_svrng cmp =
  sva_set_difference rng1 rng2 rng3 cmp;

set_symmetric_difference rng1::svrng rng2::svrng 
  rng3::mutable_svrng cmp = sva_set_symmetric_difference rng1 rng2 rng3 cmp;
