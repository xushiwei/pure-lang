private extern void* sv_make_n(expr* xs, int n);
private extern void* sv_dup(expr* rng);
private extern expr* sv_vector(expr* rng);
private extern void  sv_reserve(void* vec, int n);
private extern int   sv_size(void* vec);
private extern int   sv_iter_size(expr* rng);
