fib n = a when a, b = fibs n end
          with fibs n = 0, 1 if n<=0;
                      = b, a+b when a, b = fibs (n-1) end
                        otherwise;
          end;

// tail-recursive version, using bigints

fib2 n = a when a, b = fibs (0L, 1L) n end
           with fibs (a, b) n = a, b if n<=0;
                              = fibs (b, a+b) (n-1) otherwise;
           end;
