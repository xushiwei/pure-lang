/*** Global Definitions **************************************************/

namespace ;

public emptystlhmap emptystlhset members erase insert_or_replace replace;

type stlhmap x::pointer = check_ptrtag stl::stlhmap_t x;
type stlhset x::pointer = check_ptrtag stl::stlhmap_t x && stl::shm_setp x;

namespace stl;

// /*** Experiment *********************************************************/

namespace ;

nonfix STLHMAP;

wrap x = STLHMAP x;

(!) (STLHMAP hm) key = stl::shm_get hm key;

member (STLHMAP hm) key = stl::shm_member hm key;

w_find (STLHMAP hm) key = stl::shm_get hm key;

w_member (STLHMAP hm) key = stl::shm_member hm key;

p_find hm::stlhmap key = stl::shm_get hm key;

p_member hm::stlhmap key = stl::shm_member hm key;

q_find hm key = stl::shm_get hm key;

q_member hm key = stl::shm_member hm key;

namespace stl;

// /*** End experiment

/*** Helpers **************************************************************/

private shm_key_flg shm_val_flg shm_elm_flg shm_compatible;

const shm_key_flg = 1;
const shm_val_flg = 2;
const shm_elm_flg = 3;

shm_compatible hm1 hm2 = if shm_setp hm1 then shm_setp hm2 else ~shm_setp hm2; 

/***  Constructors *********************************************************/

::emptystlhmap = shm_make_empty 0;

::stlhmap xs = hm when
  hm = ::emptystlhmap;
  shm_insert hm xs 0;
end if listp xs || matrixp xs;

::stlhmap (STLVEC svp) = hm when
  hm = ::emptystlhmap;
  shm_insert_stlvec hm svp 0;
end;

::stlhmap hm::stlhmap = shm_copy hm if ~shm_setp hm;

::emptystlhset = shm_make_empty 1;

::stlhset xs = hs when
  hs = ::emptystlhset;
  shm_insert hs xs 0;
end if listp xs || matrixp xs;

::stlhset (STLVEC svp) = hs when
  hs = ::emptystlhset;
  shm_insert_stlvec hs svp 0;
end;

::stlhset hm::stlhset = shm_copy hm;

hmap_reserve hm::stlhmap mlf::double size::int = shm_reserve hm mlf size;

/*** Info ***************************************************************/

(::#) hm::stlhmap = shm_size hm;

empty hm::stlhmap = shm_empty hm;

container_info hm::stlhmap = shm_info hm;

bucket_size hm::stlhmap i::int = shm_bucket_size hm i;

count hm::stlhmap key = shm_count hm key;

::member hm::stlhmap key = shm_member hm key;

/*** Access *************************************************************/

(::!) hm::stlhmap key = shm_get hm key;

::members hm::stlhmap = shm_listmap 0 hm shm_elm_flg;

::keys hm::stlhmap = shm_listmap 0 hm shm_key_flg;

::vals hm::stlhmap = shm_listmap 0 hm shm_val_flg;

vector hm::stlhmap = shm_make_vector hm;

::stlvec hm::stlhmap = sv if ok when
  sv = emptystlvec;
  ok = case sv of  
    STLVEC v = shm_fill_stlvec hm v $$ 1;
    _ = 0;
  end;
end;

/*** Modifiers *********************************************************/

::insert hm::stlhmap (STLVEC svp) = shm_insert_stlvec hm svp 0;

::insert hm::stlhmap src::stlhmap = 
  shm_insert_stlhmap hm src 0 if shm_compatible hm src;

::insert hm::stlhmap src = shm_insert hm src 0;

::insert_or_replace hm::stlhmap (STLVEC svp) = 
  shm_insert_stlvec hm svp 1 if ~shm_setp hm;

::insert_or_replace hm::stlhmap src::stlhmap = 
  shm_insert_stlhmap hm src 1 if ~shm_setp hm && ~shm_setp src;

::insert_or_replace hm::stlhmap src = shm_insert hm src 1 if ~shm_setp hm;

::replace hm::stlhmap key val = shm_put hm key val $$ val;

::erase hm::stlhmap = shm_clear hm;

::erase (hm::stlhmap,key) = shm_erase hm key;

swap hm1::stlhmap hm2::stlhmap = shm_swap hm1 hm2 if shm_compatible hm1 hm2;

/*** Equality **********************************************************/

(::==) hm1::stlhmap hm2::stlhmap = shm_equal hm1 hm2 if shm_compatible hm1 hm2;

(::~=) hm1::stlhmap hm2::stlhmap = ~shm_equal hm1 hm2 if shm_compatible hm1 hm2;

map_equal hm1::stlhmap hm2::stlhmap = shm_equal hm1 hm2 if shm_compatible hm1 hm2;

/*** Mapping and Folding ************************************************/

::map f hm::stlhmap = shm_listmap f hm shm_elm_flg;

::foldl f x hm::stlhmap = shm_foldl f x hm;

::foldl1 f hm::stlhmap = shm_foldl1 f hm;

::do f hm::stlhmap = shm_do f hm;

::filter p hm::stlhmap = shm_listcatmap f hm shm_elm_flg with
  f x = res when
    res = case p x of
      1 = [x];
      0 = [];
      y = throw failed_cond;
    end;
  end;
end;

::listmap f hm::stlhmap = shm_listmap f hm shm_elm_flg;

::catmap f hm::stlhmap = shm_listcatmap f hm shm_elm_flg;

::rowmap f hm::stlhmap = rowcat (shm_listmap f hm shm_elm_flg);

::rowcatmap f hm::stlhmap = rowcat (shm_listmap f hm shm_elm_flg);

::colmap f hm::stlhmap = colcat (shm_listmap f hm shm_elm_flg);

::colcatmap f hm::stlhmap = colcat (shm_listmap f hm shm_elm_flg);

