/*** Helpers **************************************************************/

private 
  compatible smm_lower_bound_flg smm_upper_bound_flg smm_equal_range_flg
  smm_key_flg smm_val_flg smm_elm_flg smm_iter_flg smm_iter_dflt_flg
  smm_merge smm_union smm_difference smm_intersection smm_symmetric_difference; 

const smm_lower_bound_flg = 1;
const smm_upper_bound_flg = 2;
const smm_equal_range_flg = 3;

const smm_key_flg = 1;
const smm_val_flg = 2;
const smm_elm_flg = 3;
const smm_iter_flg = 4;
const smm_iter_dflt_flg = 5;

const smm_merge = 1;
const smm_union = 2;
const smm_difference = 3;
const smm_intersection = 4;
const smm_symmetric_difference = 5;

const smm_at_beginning = 1;
const smm_at_pastend = 2;

compatible rng1::stlmmap_rng rng2 = 
  if smm_is_set rng1 then smm_is_set rng2 else ~smm_is_set rng2;

/*** Iterators **********************************************************/

iterator itr::stlmmap_iter = smm_copy_iter itr;

begin smm::stlmmap = smm_begin smm;

pastend smm::stlmmap = smm_end smm;

find smm::stlmmap key = smm_find smm key smm_iter_flg;

l_bound smm::stlmmap key = smm_bounds smm key smm_lower_bound_flg;

u_bound smm::stlmmap key = smm_bounds smm key smm_upper_bound_flg;

lu_bounds smm::stlmmap key = smm_bounds smm key smm_equal_range_flg;

beginp itr::stlmmap_iter = smm_iter_is_at itr smm_at_beginning;

endp itr::stlmmap_iter = smm_iter_is_at itr smm_at_pastend;

get_info itr::stlmmap_iter = smm_iter_info itr;

::get itr::stlmmap_iter = smm_get_at itr smm_elm_flg;

get_key itr::stlmmap_iter = smm_get_at itr smm_key_flg;

get_val itr::stlmmap_iter = smm_get_at itr smm_val_flg;

::put itr::stlmmap_iter val = smm_put_at itr val;

inc itr::stlmmap_iter = smm_move_iter itr 1;

dec itr::stlmmap_iter = smm_move_iter itr (-1);

move itr::stlmmap_iter n::int = smm_move_iter itr n;

insert_elm smm::stlmmap (elm, p::stlmmap_iter) = smm_insert_hinted smm p elm;

insert_elm smm::stlmmap elm = smm_insert_elm smm elm;

/*** Iterator Operators ****************************************************/

(::==) itr1::stlmmap_iter itr2::stlmmap_iter = smm_equal_iter itr1 itr2;

(::^) smm::stlmmap key = smm_find smm key smm_iter_dflt_flg; 

/***  Constructors *********************************************************/

::emptystlmmap                    = smm_make_empty (<) (<) (==) [] 0;

::mkstlmmap (kcmp,dflt,vcmp,veql) = smm_make_empty kcmp vcmp veql dflt 0;
::mkstlmmap (kcmp,dflt,vcmp)      = smm_make_empty kcmp vcmp (==) dflt 0;
::mkstlmmap (kcmp,dflt)           = smm_make_empty kcmp (<) (==) dflt  0;
::mkstlmmap kcmp                  = smm_make_empty kcmp (<) (==) [] 0;

::stlmmap xs = smm when
  smm = ::emptystlmmap;
  smm_insert smm xs;
end if listp xs || matrixp xs;

::stlmmap (STLVEC svp) = smm when
  smm = ::emptystlmmap;
  smm_insert_stlvec smm svp;
end;

::stlmmap rng::stlmmap_rng = smm when
  _,params = smm_container_info rng;
  smm = mkstlmmap params;
  smm_insert_stlmmap smm rng;
end if ~smm_is_set rng;

::emptystlmset = smm_make_empty (<) (<) (==) [] 1;

::mkstlmset kcmp = smm_make_empty kcmp (<) (==) [] 1;

::stlmset xs = ss when
  ss = ::emptystlmset;
  smm_insert ss xs;
end if listp xs || matrixp xs;

::stlmset (STLVEC svp) = ss when
  ss = ::emptystlmset;
  smm_insert_stlvec ss svp;
end;

::stlmset rng::stlmmap_rng = ss when
  _,kc,_ = smm_container_info rng;
  ss = mkstlmset kc;
  smm_insert_stlmmap ss rng;
end if smm_is_set rng;

/*** Info ***************************************************************/

container_info rng::stlmmap_rng = smm_container_info rng;

(::#) smm::stlmmap = smm_size smm;

empty smm::stlmmap = smm_empty smm;

count smm::stlmmap key = smm_count smm key;

range_info rng::stlmmap_rng = smm_range_info rng;

distance rng::stlmmap_rng = smm_size rng;

/*** Range Access ******************************************************/

::stream rng::stlmmap_rng = gen first with 
  gen i = if smm_equal_iter i last then [] 
          else smm_get_elm_at_inc i : (gen i &);  
end if valid when 
  valid,m,b,last = smm_range_info rng;
  first = smm_copy_iter b;
end;

::members rng::stlmmap_rng = smm_listmap 0 rng smm_elm_flg; 

::keys rng::stlmmap_rng = smm_listmap 0 rng smm_key_flg;// if ~smm_is_set rng;

::vals rng::stlmmap_rng = smm_listmap 0 rng smm_val_flg;// if ~smm_is_set rng;

vector rng::stlmmap_rng = smm_make_vector rng;

::stlvec rng::stlmmap_rng = sv if ok when
  sv = emptystlvec;
  ok = case sv of  
    STLVEC v = smm_fill_stlvec rng v $$ 1;
    _ = 0;
  end;
end;

/*** Modifiers *********************************************************/

::insert smm::stlmmap (STLVEC svp) = smm_insert_stlvec smm svp;

::insert smm::stlmmap rng::stlmmap_rng = 
  smm_insert_stlmmap smm rng if compatible smm rng;

::insert smm::stlmmap src = smm_insert smm src;

//insert_or_replace -- N/A


//insert_or_replace -- N/A


//insert_or_replace -- N/A


::replace smm::stlmmap key vals::list = smm_replace smm key vals;

//replace_elm_with -- N/A

::erase smm::stlmmap = smm_clear smm;

::erase (smm::stlmmap,itr1::stlmmap_iter, itr2::stlmmap_iter) = 
  smm_erase smm (itr1,itr2);

::erase (smm::stlmmap,itr::stlmmap_iter) = smm_erase smm itr;

::erase (smm::stlmmap,key1,key2) = smm_erase smm (smm,key1,key2);

::erase (smm::stlmmap,key) = smm_erase smm (smm,key);

swap smm1::stlmmap smm2::stlmmap = smm_swap smm1 smm2 if compatible smm1 smm2;

/*** Equality and Lexicographical Comparison ***************************/

map_equal rng1::stlmmap_rng rng2::stlmmap_rng = smm_equal rng1 rng2
  if compatible rng1 rng2;

(::==) rng1::stlmmap_rng rng2::stlmmap_rng = smm_equal rng1 rng2
  if compatible rng1 rng2;

(::~=) rng1::stlmmap_rng rng2::stlmmap_rng = ~smm_equal rng1 rng2
  if compatible rng1 rng2;

(::<) rng1::stlmmap_rng rng2::stlmmap_rng = smm_less rng1 rng2
  if compatible rng1 rng2;

(::<=) rng1::stlmmap_rng rng2::stlmmap_rng = ~smm_less rng2 rng1
  if compatible rng1 rng2;

(::>) rng1::stlmmap_rng rng2::stlmmap_rng = smm_less rng2 rng1
  if compatible rng1 rng2;

(::>=) rng1::stlmmap_rng rng2::stlmmap_rng = ~smm_less rng1 rng2
  if compatible rng1 rng2;

/** STL Set Algorithms ***************************************************/

map_merge rng1::stlmmap_rng rng2::stlmmap_rng = 
  smm_setop smm_merge rng1 rng2 if compatible rng1 rng2;

map_union rng1::stlmmap_rng rng2::stlmmap_rng = 
  smm_setop smm_union rng1 rng2 if compatible rng1 rng2;

map_difference rng1::stlmmap_rng rng2::stlmmap_rng = 
  smm_setop smm_difference rng1 rng2 if compatible rng1 rng2;

map_intersection rng1::stlmmap_rng rng2::stlmmap_rng = 
  smm_setop smm_intersection rng1 rng2 if compatible rng1 rng2;

map_symmetric_difference rng1::stlmmap_rng rng2::stlmmap_rng = 
  smm_setop smm_symmetric_difference rng1 rng2 if compatible rng1 rng2;

map_includes rng1::stlmmap_rng rng2::stlmmap_rng =
 smm_includes rng1 rng2 if compatible rng1 rng2;

/*** Key oriented interface functions *********************************/

(::!) smm::stlmmap key = smm_listmap 0 (smm,key) smm_val_flg;

::get (smm::stlmmap,key) = smm_find smm key smm_elm_flg; 

::member smm::stlmmap key = smm_member smm key;

bounding_keys rng::stlmmap_rng = smm_bounding_keys rng;

next_key smm::stlmmap key = smm_next_key smm key;

prev_key smm::stlmmap key = smm_prev_key smm key;

/*** Mapping and Folding ********************************************/

::map f rng::stlmmap_rng = smm_listmap f rng smm_elm_flg;

::foldl f x rng::stlmmap_rng = smm_foldl f x rng;

::foldl1 f rng::stlmmap_rng = smm_foldl1 f rng;

::foldr f x rng::stlmmap_rng = smm_foldr f x rng;

::foldr1 f rng::stlmmap_rng = smm_foldr1 f rng;

::do f rng::stlmmap_rng = smm_do f rng;

::filter p rng::stlmmap_rng = smm_foldr f [] rng with
  f x xs = res when
    res = case p x of
      1 = x:xs;
      0 = xs;
      y = throw failed_cond;
    end;
  end;
end;

::listmap f rng::stlmmap_rng = smm_listmap f rng smm_elm_flg;

::catmap f rng::stlmmap_rng = smm_listcatmap f rng smm_elm_flg;

::rowmap f rng::stlmmap_rng = rowcat (smm_listmap f rng smm_elm_flg);

::rowcatmap f rng::stlmmap_rng = rowcat (smm_listmap f rng smm_elm_flg);

::colmap f rng::stlmmap_rng = colcat (smm_listmap f rng smm_elm_flg);

::colcatmap f rng::stlmmap_rng = colcat (smm_listmap f rng smm_elm_flg);

