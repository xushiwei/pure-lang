using "lib:libgsl";

namespace gsl;
private extern void gsl_sort(double*, size_t, size_t);
private extern void gsl_sort_int(int*, size_t, size_t);

public
  sort;

sort m::matrix
  = v $$ m
    with
      v = gsl_sort_int (pointer m) 1 (#m) if imatrixp m;
      v = gsl_sort (pointer m) 1 (#m) if dmatrixp m;
    end
    if rowvectorp m;
